{
  "buildCommand": "cd src && npm install && npm run build",
  "outputDirectory": "src/.next",
  "installCommand": "npm install --prefix ./src",
  "devCommand": "cd src && npm run dev",
  "functions": {
    "src/app/api/cron/daily-maintenance/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/cron/export-file-cleanup/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/chunks/extract/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/chunks/regenerate/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/chunks/generate-dimensions/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/conversations/generate/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/conversations/generate-batch/route.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-maintenance",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/export-file-cleanup",
      "schedule": "0 2 * * *"
    }
  ]
}

